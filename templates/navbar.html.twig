<div data-role="navbar" data-grid="c" class="navbar">
    <ul>
        <li><a href="/">Home</a></li>

        <!--If logged in, display 'Logout' button
        else, display 'Login' button-->
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <li><a href="/logout">Logout</a></li>
        {% else %}
            <li><a href="/login">Login</a></li>
        {% endif %}

        <!--Only display Registration link if user not logged in
        else, display link to menu-->

        {% if is_granted('ROLE_USER')%}
            <li><a href="/menu">Menu</a></li>
        {% elseif is_granted('ROLE_DRIVER') %}
            <li><a href="/menu#orders" rel="external">View Orders</a></li>

        {% elseif not is_granted('IS_AUTHENTICATED_FULLY') %}
            <li><a href="/register">Register</a></li>
        {% endif %}

        <!--Only display administration link to user with
        ROLE_ADMIN role-->
        {% if is_granted('ROLE_ADMIN') %}
            <li><a href="/admin">Administration</a></li>
        {% elseif is_granted('ROLE_MANAGER') %}
            <li><a href="/manager">Manager</a></li>
        {% elseif is_granted('ROLE_USER')%}
            <li><a href="/menu#orders" rel="external">Orders</a></li>
        {% else %}
            <li><a href="/about">About</a></li>
        {% endif %}

    </ul>
</div><!-- /navbar -->