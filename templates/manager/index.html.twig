        <!-- img src="/images/pizza-banner.jpeg"/ -->

        {% include 'navbar.html.twig' %}

    </div><!--end header-->

    <br/>

    <div class="center-text">
    <a href="/manager#reports">Sales Reports</a>
    </div>

    <br/>

    <div id="viewCurrentOrders">
        <table class="menu-table">
            <thead>
            <tr>
                <th>OrderID</th>
                <th>Delivery Address</th>
                <th>Status</th>
                <th>Comments</th>
                <th>Total Cost</th>
